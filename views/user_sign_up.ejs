<link rel="stylesheet" href = "/css/forms.css">

<div class="container mt-5">

  <div class="row mt-3">

      <div class="col-md-6 m-auto">

          <div class="card card-body">

              <h1 class="text-center">

                Sign Up

              </h1>

        <form action = "/users/create" method="post">

        <div class="d-grid gap-2 col-8 mx-auto mt-3">

          <input type="text" name="name" placeholder="Your Name" class = "form-input mt-2" required>

        </div>

        <div class="d-grid gap-2 col-8 mx-auto mt-3">

          <input type="email" name="email" placeholder="Your E-mail" class = "form-input mt-2" required>

        </div>
        
        <div class="d-grid gap-2 col-8 mx-auto mt-3">

        <input type="password" name="password" placeholder="Password" class = "form-input mt-2" required>

        </div>

        <div class="d-grid gap-2 col-8 mx-auto mt-3">

        <input type="password" name="confirm_password" placeholder="Confirm Password" class = "form-input mt-2" required>

        </div>

        <div class="d-grid gap-2 col-3 mx-auto mt-3">

          <button class="btn color mt-3" type="submit" style="border-radius: 40px; font-size: 1.3rem;">Sign Up</button>

        </div>

        <p class="lead mt-4">
          <img src="https://upload.wikimedia.org/wikipedia/commons/5/53/Google_%22G%22_Logo.svg"/>
           &nbsp;
          <a href="/users/auth/google"> Sign Up with Google </a> 
        </p> 

        </form> 

        </div>
    </div>
  </div>
</div>
    
    
      
      














































   
   