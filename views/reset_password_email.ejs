<link rel="stylesheet" href = "/css/forms.css">
<div class="container mt-5">
  <div class="row mt-3">
      <div class="col-md-6 m-auto">
          <div class="card card-body">
              <h4 class="text-center">
                Enter your e-mail address below to reset your password 
              </h4>

            <form action = "reset-password/email" method="post">

            <div class="d-grid gap-2 col-10 mx-auto mt-3">

            <input type="email"
            name="email"
            placeholder="E-mail" 
            class = "form-input mt-2"
            required>

        </div>

        <div class="d-grid gap-2 col-3 mx-auto mt-3">

          <button class="btn color mt-3" type="submit" style="border-radius: 20px; white-space: nowrap; font-size: 1.1rem;">Reset Password</button>

        </div>
       
       </form> 
        </div>
    </div>
  </div>
</div>
    
    
      
      















